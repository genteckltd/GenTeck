{
  "name": "genteck-website",
  "version": "1.0.0",
  "description": "GenTeck Technology - Professional Company Website",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --host=0.0.0.0 --port=3000 --open=/",
    "build": "npm run build:css && npm run minify:js",
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./dist/css/main.min.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/main.compiled.css --watch",
    "minify:js": "terser ./assets/js/main.js -o ./dist/js/main.min.js --compress --mangle",
    "optimize:images": "imagemin assets/images/* --out-dir=dist/images",
    "lint:css": "stylelint \"assets/css/*.css\"",
    "lint:js": "eslint assets/js/*.js",
    "test": "jest",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./docs/lighthouse-report.html",
    "deploy": "npm run build && gh-pages -d ."
  },
  "keywords": [
    "technology",
    "website",
    "AI",
    "cybersecurity",
    "cloud-computing",
    "business-solutions"
  ],
  "author": "GenTeck Technology Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genteckltd/GenTeck.git"
  },
  "homepage": "https://genteckltd.github.io/GenTeck",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.32",
    "stylelint": "^16.1.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.26.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
